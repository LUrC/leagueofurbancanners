<h1><%= @status_check.check_name %></h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Fruit tree:</b>
  <%= link_to @status_check.fruit_tree.tree_name, @status_check.fruit_tree %>
</p>

<p>
  <b>Date:</b>
  <%= @status_check.date.to_s :human %>
</p>

<p>
  <b>Status:</b>
  <%= @status_check.status %>
</p>

<p>
  <b>Notes:</b>
  <%= @status_check.notes %>
</p>

<p>
    <b>Image</b> <%= link_to 'Upload an Image', add_image_status_check_path(@status_check), :class => 'btn btn-primary' %>
    <%= image_tag @status_check.image if @status_check.image.file %>
