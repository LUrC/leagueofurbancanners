<h1>Listing Harvestings</h1>

<p><%= link_to 'New Harvesting', url_for([:new, @parent, :harvesting]), :class => 'btn btn-primary' %></p>

<table class="table table-striped">
  <tr>
    <th>Harvest</th>
    <th>Harvester</th>
    <th>Hours</th>
    <th></th>
    <% if user_signed_in? && current_user.organizer? %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @harvestings.each do |harvesting| %>
  <tr>
    <td><%= harvesting.harvest.harvest_name %></td>
    <td><%= harvesting.harvester_name %></td>
    <td><%= harvesting.hours %></td>
    <td><%= link_to 'Learn More', harvest_harvesting_path(harvesting.harvest, harvesting), :class => 'btn btn-mini' %></td>
    <% if user_signed_in? && current_user.organizer? %>
      <td><%= link_to 'Edit', edit_harvest_harvesting_path(harvesting.harvest, harvesting), :class => 'btn btn-mini' %></td>
      <td><%= link_to 'Delete', harvest_harvesting_path(harvesting.harvest, harvesting), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />


